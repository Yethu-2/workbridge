# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS)
CLIENT_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-long-and-random
JWT_EXPIRES_IN=7d

# Database Configuration (for future MongoDB/PostgreSQL integration)
# DATABASE_URL=mongodb://localhost:27017/workbridge
# or
# DATABASE_URL=postgresql://user:password@localhost:5432/workbridge

# Email Configuration (for future email features)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# File Upload Configuration
MAX_FILE_SIZE=10mb

# API Rate Limiting (requests per 15 minutes)
RATE_LIMIT_MAX=100

# Admin Configuration
ADMIN_EMAIL=admin@workbridge.com
ADMIN_PASSWORD=change-this-admin-password

# OAuth (for future social login)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret
